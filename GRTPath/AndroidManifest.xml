<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.grtpath"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />
    
    <uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
	<!-- The following two permissions are not required to use
     Google Maps Android API v2, but are recommended. -->
	<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
	<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
	
	<!--  For Google Maps -->
	<uses-feature
        android:glEsVersion="0x00020000"
        android:required="true"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.grtpath.activity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.grtpath.activity.StopFinderActivity"
            android:label="@string/title_activity_stop_finder"
            android:launchMode="singleTop"
            android:parentActivityName="com.grtpath.activity.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.grtpath.activity.MainActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name="com.grtpath.activity.DisplayRoutesActivity"
            android:label="@string/title_activity_display_routes"
            android:parentActivityName="com.grtpath.activity.StopFinderActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.grtpath.activity.StopFinderActivity" />
        </activity>
        <activity
            android:name="com.grtpath.activity.MapActivity"
            android:label="@string/title_activity_map" >
        </activity>
        
        <!-- Google Maps access -->
        <meta-data
    		android:name="com.google.android.gms.version"
    		android:value="@integer/google_play_services_version" />
        <meta-data
    		android:name="com.google.android.maps.v2.API_KEY"
    		android:value="APIKEY"/>
        
    </application>

</manifest>
